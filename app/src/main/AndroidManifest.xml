<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.bstu.faa.christmas_tree">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_round_tree_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Christmas_Tree">
        <activity android:name=".DB.activities.DeleteDataActivity"></activity>
        <activity android:name=".DB.activities.UpdateDataActivity" />
        <activity android:name=".DB.activities.AddDataActivity" />
        <activity android:name=".DB.activities.DbOptionSelectActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>